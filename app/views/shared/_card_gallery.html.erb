<div class="row gy-3 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4">
    <% card_gallery_model.each do |film| %>
        <div class="col">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <div class="pb-3 border-bottom">
                        <h5 class="card-title"><%= film.name %></h5>
                        <h6 class="card-text">By <%= film.director %></h6>
                    </div>
                    <p class="card-text pt-3 my-auto"><%= film.synopsis %></p>
                </div>
            </div>
        </div>
    <% end %>
</div>
