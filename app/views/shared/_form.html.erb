<%= link_to "Go back", :back, class: "btn btn-dark mb-3" %>

<div class="row justify-content-center">
    <div class="col-12 col-sm-8 col-md-6">
        <%= form_with model: form_model, method: :post do |form| %>

        <div class="mb-3">
            <%= form.label :name, "Name", class: "form-label" %>
            <%= form.text_field :name, class: "form-control" %>
        </div>

        <div class="mb-3">
            <%= form.label :synopsis, "Synopsis", class: "form-label" %>
            <%= form.text_area :synopsis, class: "form-control", rows: "5" %>
        </div>

        <div class="mb-3">
            <%= form.label :director, "Director", class: "form-label" %>
            <%= form.text_field :director, class: "form-control" %>
        </div>

        <div class="mb-3">
            <%= form.submit "Submit", class: "btn btn-dark" %>
        </div>

        <% end %>
    </div>
</div>
